<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.board.mapper.BoardMapper">
	 <sql id="criterid">
        <where>
       <if test="title != null" >
           UPPER(title) LIKE '%' || UPPER(#{title})||'%'
       </if>
       </where>
   </sql>
	<!-- 전체조회
	<select id="selectBoardList" resultType="BoardVO">
		select   bno,
		         title,
		         content,
		         writer,
		         regdate,
		         updatedate
		from     tbl_board
	</select>-->
	<select id="selectCount" resultType="Long">
	 	select count(*)
 	    from tbl_board
 	    <include refid="criterid"></include>
	</select>
	
	<select id="selectBoardList" resultType="BoardVO">
	 SELECT * FROM (
                 SELECT  /*+ INDEX_DESC(TBL_BOARD PK_BOARD) */
                  ROWNUM RN,E.*
                  FROM TBL_BOARD E
			  <include refid="criterid"></include>
              )B WHERE RN BETWEEN #{first} AND #{last}
	</select>
	
	 <resultMap type="empVO" id="empMap">
 	    <association property="deptVO" column="department_id" javaType="DeptVO" select="selectDeptById"/>
    </resultMap>
	<!-- 단건조회 -->
	<select id="selectBno" parameterType="Long" resultType="boardVO">
		SELECT  *
		FROM     TBL_BOARD
		WHERE    BNO = #{bno}
	</select>
	<!-- 수정 -->
	<update id="updateBoard">
		update tbl_board set
		     
	</update>
	<!-- 삭제 -->
	<delete id="deleteBoard">
		DELETE FROM TBL_BOARD
		WHERE  BNO = #{bno}
	</delete>
	<!-- 등록 -->
	<insert id="insertBoard">
		insert into tbl_board(
				bno,
				title,
				content,
				writer,
				attach
		)
		values(
			seq_board.NEXTVAL,
			#{title},
			#{content},
			#{writer},
			#{attach}
		)
	</insert>
</mapper>